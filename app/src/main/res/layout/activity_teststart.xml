<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TeststartActivity">
    <ru.dimorinny.floatingtextbutton.FloatingTextButton
        android:id="@+id/fab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="2dp"
        app:floating_background_color="@color/cardview_light_background"
        app:floating_left_icon="@drawable/ic_wrap_text_black_24dp"
        app:floating_title="   Start Theory   " />

    <ru.dimorinny.floatingtextbutton.FloatingTextButton
        android:id="@+id/fab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="2dp"
        app:floating_background_color="@color/cardview_light_background"
        app:floating_left_icon="@drawable/ic_developer_board_black_24dp"
        app:floating_title="Start Practical" />

    <ru.dimorinny.floatingtextbutton.FloatingTextButton
        android:id="@+id/fab3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="2dp"
        app:floating_background_color="@color/cardview_light_background"
        app:floating_left_icon="@drawable/ic_done_all_black_24dp"
        app:floating_title="Complete Batch" />
</LinearLayout>